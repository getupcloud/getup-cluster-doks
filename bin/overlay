#!/usr/bin/env python
#
# Usage: ./overlay [overlay] [tfvars|output]...
#
import re
import os
import sys
import json

regex = os.environ.get('OVERLAY_LINE_REGEX', '^(\\s*)([^\\s]+):\\s+(.*)#output:(.+)$')
output_re = re.compile(regex)
overlay_file = sys.argv[1]
input_files = sys.argv[2:]

data = {}
for infile in input_files:
    with open(infile, 'r') as f:
        data.update(json.load(f))

count = 0
with open(overlay_file, 'r') as f:
    for line in f.readlines():
        if '#output:' not in line:
            print(line, end='')
            continue

        match = output_re.match(line)
        if not match:
            print("WARN: Unmatching output line:", out=sys.stderr)
            print("line: {line}", out=sys.stderr)
            print("expr: {regex}", out=sys.stderr)
            print(line, end='')
            continue

        try:
            indent, name, _, tpl = match.groups()
            #TODO: add libs (ex: base64)
            value = eval(f"f'{tpl}'", data)
            print(f'{indent}{name}: {value} #output:{tpl}')
            count = count + 1
        except (NameError, KeyError) as ex:
            print(line, end='')
            print(f'Error: {ex}', file=sys.stderr)
    print(f'Total replaces: {count}', file=sys.stderr)
